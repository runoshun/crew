{
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "excludedCommands": ["docker"]
  },
  "permissions": {
    "allow": [
      "Bash(mise run:*)",
      "Bash(go build:*)",
      "Bash(go test:*)",
      "Bash(go tool:*)",
      "Bash(go mod tidy:*)",
      "Bash(golangci-lint:*)",
      "Bash(fieldalignment:*)",
      "Bash(gofmt:*)"
    ],
    "deny": [
      "Read(.envrc)",
      "Read(./.env*)"
    ]
  }
}
